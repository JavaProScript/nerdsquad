<div class = "homepage">
  <div class = "intro">
  <h1>Add your pieces</h1>
  <br>
  <br>
      <div class = "cardwow">
  <%= simple_form_for([@game, @piece]) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file, required: true %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <%= f.button :submit, class:'btn-flat'  %>
  <% end %>
  </div>
</div>
</div>
