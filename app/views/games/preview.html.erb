<div class="table">
  <div class="container">
    <h1><%= @game.name %> game preview </h1>
    <h2><%= @game.number_of_players %> players</h2>

    <% if @game.board %>
      <%=cl_image_tag @game.board.photo.key , { class: "board"} %>
    <% end %>

    <div class="movablecontainer">
      <% unless @game.pieces.empty? %>
        <% @game.pieces.each do |piece| %>
          <%= cl_image_tag piece.photo.key, width: '60px' %>
        <% end %>
      <% end %>

      <% unless @game.tokens.empty? %>
        <% @game.tokens.each do |token| %>
          <%= cl_image_tag token.photo.key, width: '40px' %>
        <% end %>
      <% end %>

      <%# unless @game.dices.empty? %>
        <%#= cl_image_tag("dices.png", :quality=>50, :width=>72, :crop=>"scale") %>
        <%# <ul> %> 
          <%# @game.dices.each do |dice| %>
          <%# <li><%#= dice.faces %>   <%#faces</li> %>
          <%# end %>
        <%#</ul>
      <%# end %>

      <% unless @game.card_decks.empty? %>
        <% @game.card_decks.each do |deck| %>
          <div>
            <%= deck.name %>
            <%= cl_image_tag deck.cards.first.photo.key, {width: '120px'} %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
