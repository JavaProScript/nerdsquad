<div class="container">
    <h1>Create your game</h1>

    <%= link_to  "1", new_game_path, class: "badge badge-pill badge-primary" %>
    <%= link_to  "2", new_game_path, class: "badge badge-pill badge-primary" %>
    <%= link_to  "3", new_game_path, class: "badge badge-pill badge-primary" %>
    <%= link_to  "4", new_game_path, class: "badge badge-pill badge-primary" %>
    <%= link_to  "5", new_game_path, class: "badge badge-pill badge-primary" %>
    <%= link_to  "6", new_game_path, class: "badge badge-pill badge-primary" %>
    <p>Choose number of players</p>
    

    
    <%= simple_form_for(new_game_path, remote: true) do |f| %>
      <%= f.input :players, collection: 1..6 %>
      <%= f.button :submit %>
    <% end %>

</div>


