<div class="container d-flex justify-content-center">
    <div class="gameroomindex">
        <table>
        <thead>
            <tr>
            <th><h2>Games</h2></th>
            <br>
            <th><h2>Gamerooms</h2></th>
            <th colspan="2"></th>
            </tr>
        </thead>
    <div class="games">
            <tbody>
                <% @gamerooms.each do |gameroom| %>          
                <tr>
                    <td><%= "#{gameroom.clone.name}"%></td>
                    <td><%= link_to "Join", gameroom_path(gameroom) %></td>           
                <% end %>
                </tr>       
                
            </tbody>
            </table>

        <div class= "button">
        <%= link_to "Homepage", "/", class: "btn btn-flat" %>
        </div>

    </div>
</div>



