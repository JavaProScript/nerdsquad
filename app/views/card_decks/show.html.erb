<div class = "movablecontainer">


  <%= cl_image_tag @game.board.photo.key , { class: "card_deck"} %>

  <%= simple_form_for([@game, @board]) do |f| %>
    <%= f.input :posX, id: "posX" %>
    <%= f.input :posY, id: "posY", as: :hidden %>
    <%= f.button :submit, class: "btn btn-primary bottom-right"  %>
  <% end %>

<h2>Add a card in your deck</h2>
  <%= simple_form_for([@game, @card_deck, @card]) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
  <% end %>

</div>
<div class = "table">
</div>
