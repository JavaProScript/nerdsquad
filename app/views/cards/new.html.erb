<div class = "homepage">
  <div class = "intro">
    <h1>Add a card in your deck</h1>
    <br>
    <br>
      <div class = "cardwow">
      <%= simple_form_for([@game, @deck, @card]) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file, required: true %>
        <%= f.button :submit, class:'btn-flat'  %>
      <% end %>
      </div>
  </div>
</div>
